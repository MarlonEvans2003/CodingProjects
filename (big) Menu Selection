import webbrowser
def MainMenu():
    # Welcome message that asks the first options (Food choices)
    #
    print("***********************************************")
    print("***********************************************")
    print("***                                         ***")
    print("***      Welcome to the Foodie ChatBot      ***")
    print("***                                         ***")
    print("***      Please Select what Kind of Food,   ***")
    print("***      You would like to eat today?       ***")
    print("***                                         ***")
    print("***      1. Chinese                         ***")
    print("***      2. Indian                          ***")
    print("***      3. Turkish                         ***")
    print("***                                         ***")
    print("***********************************************")
    print("***********************************************")
    choice = int(input('Select 1, 2 or 3 \n'))
    if choice != 1 and choice !=2 and choice !=3:
        choice = input('You must either enter 1, 2 or 3\n')
    if choice == 1:
        return "Chinese"
    if choice == 2:
        return "Indian"
    if choice == 3:
        return "Turkish"
def PriceMenu():
    # Second option menu that asks for the user's desired budget option
    print("***********************************************")
    print("***********************************************")
    print("***                                         ***")
    print("***      What is Your Budget?               ***")
    print("***                                         ***")
    print("***      1. Low                             ***")
    print("***      2. Medium                          ***")
    print("***      3. Expensive                       ***")
    print("***                                         ***")
    print("***********************************************")
    print("***********************************************")
    choice = int(input('Select 1, 2 or 3 \n'))
    while choice != 1 and choice !=2 and choice !=3:
        choice = input('You must either enter 1, 2 or 3\n')
    if choice == 1:
        return "Low"
    if choice == 2:
        return "Medium"
    if choice == 3:
        return "High"
