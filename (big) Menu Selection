def FindRest(FoodType, PriceLevel, Location):
      for line in open('Food.txt',"r").readlines(): # Read the lines
        #global cust_info
Food_info = line.split() # Split on the space, and store the results in a
list of two strings
        if Food_info == None:    # EOF reached
            return[False]
if PriceLevel == Food_info[2] and FoodType == Food_info[0] and Location ==
Food_info[3]:  #Reads the file and matches up with the correct
information within said file
            print("Restaurant found for "+ Food_info[0] + "named " + Food_info[1] )
return [True, Food_info[0], Food_info[1], Food_info[2], Food_info[3],
Food_info[4]]
