import stdiomask
import getpass #imports the getpass module to allow for password function
import sys #imports sys module to allow for system specific commands
import csv #imports csv module for file reading6
import pandas as pd #imports pandas module and shortens it to pd for data
manipulation
import matplotlib.pyplot as plt #import the matplotlib modules for data
visualisation
def login():
 #This function allows the user to login using a predetermined set of username
and password
 attempts=0
 while attempts<3:
 username=input('please enter your username: ')
 password=stdiomask.getpass('please enter your password: ') #Hides the user
input with asterisks as an added security feature
 if username == "Test" and password == "Password":
 print("Welcome")
 break
 else:
 print('Please enter a valid username and password ')
 attempts+=1 #adds an attempt for wrong input
 if attempts==3:
 print('Due to security reasons you have been locked')
 input('press ENTER to exit')
 sys.exit() #Script is terminated when user inputs the wrong thing 3 times


def MainMenu(): #Main menu user first sees
 print("+=======================================+")
 print("| WELCOME TO RBSX FINANCIAL ADVICE |")
 print("| 1: Currency Conversion |")
 print("| 2: Currency Trends |")
 print("| 3: Exit |")
 print("+==========================++++++=======+")
 choice = int(input("choose an option 1,2,3 \n"))
 while choice != 1 and choice !=2 and choice !=3:
 choice = int(input('You must either enter 1,2 or 3: ' ))
 return choice #Asks for an input which then moves onto the respected inputs.

