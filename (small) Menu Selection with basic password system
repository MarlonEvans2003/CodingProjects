def USDtoGBP(): #Conversion function for USD to GDP
 currency = pd.read_csv('RatesUSDtoGBP.csv') #Reads the file to grab the value
for "rates"
 rates = currency.head(1)
 amount = float(input("Please enter how much you want to convert: "))
 convertionamount = amount * rates['GBP'] #Actual conversion feature + output
 print("Your total comes to: ", + convertionamount)
def GBPtoUSD(): #Conversion Function for GBP to UDF
 currency = pd.read_csv('RatesUSDtoGBP.csv')
 rates = currency.head(1)
 amount = float(input("Please enter how much you want to convert: "))
 convertionamount = amount / rates['GBP'] #Actual conversion feature + output
 print("Your total comes to: ", + convertionamount)
def TrendsUSDtoGBP(): #Function to print a graph that shows the trend for USD to
GBP
 currency = pd.read_csv('RatesUSDtoGBP.csv', parse_dates=['Date']) #Reads the
file
 plt.plot(currency['Date'], currency['GBP'])
 plt.xticks(rotation=90)
 plt.ylabel('Exchange Rates', fontsize=12)
 plt.xlabel('Dates', fontsize=12)
 plt.title('This shows the trend for USD to GBP')
 plt.show()
def TrendsGBPtoUSD(): #Function to print a graph that shows the trend for GBP to
USD
 currency['USD'] = 1/currency['GBP']
 plt.plot(currency['Date'], currency['USD'])
 plt.xticks(rotation=90)
 plt.title('GBP to USD over time')
 plt.ylabel('Exchange Rates', fontsize=12)
 plt.xlabel('Dates', fontsize=12)
 plt.title('This shows the trend for GBP to USD')
 plt.show() #Shows the actual graph
def Returning(): #Function that allows for the user to go back to the start
 Return = input("Do you need anything else? Y/N: ")
 Return = Return.upper()
 if Return == 'Y':
 MainMenu()
 else:
 sys.exit()
